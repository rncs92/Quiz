<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <title>Vendon</title>
</head>
<body class="bg-gray-200 w-screen h-screen">
<section class="relative mx-auto w-fit">
    <nav class="flex justify-between bg-cyan-800 text-white w-screen">
        <div class="px-5 xl:px-12 py-6 flex w-full items-center">
            <a class="text-3xl font-bold font-heading" href="/">
                <img src="https://vendon.net/wp-content/uploads/2021/06/Logo_Header-1.svg" width="200" height="46"
                     class="attachment-full size-full wp-image-2389 astra-logo-svg" loading="lazy" alt="Vendon">
            </a>
        </div>
    </nav>
</section>
<div class="flex justify-center items-center w-full mt-10">
    <h1 class="font-semibold text-3xl p-4 mb-8">Izvēlieties pareizo atbildi</h1>
</div>
<div id="quiz-container" class="flex justify-center h-screen">
    <form class="w-1/2" id="quiz-form" action="/test" method="POST">
        {% for question in questions %}
            <div class="question" id="{{ question.questionid }}" style="display: none;">
                <div class="border-2 rounded-xl p-8 border-gray-300 bg-gray-100">
                    <p class="text-2xl text-center">{{ question.question }}</p>
                </div>
                <!-- Display answer options for the current question only -->
                <div class="p-4">
                    <ul>
                        <li class="flex justify-center">
                            <label class="flex justify-center w-1/2 mb-3 border-l-8 bg-blue-50 border-black drop-shadow-lg transition ease-in-out hover:-translate-y-1 hover:scale-110 hover:bg-emerald-600 active:bg-emerald-800 cursor-pointer">
                                <input type="radio" name="question{{ loop.index }}_answer"
                                       value="{{ question.answer1 }}" class="hidden">
                                <span class="py-2 px-4">
                                    {{ question.answer1 }}
                                </span>
                            </label>
                        </li>
                        <li class="flex justify-center">
                            <label class="flex justify-center w-1/2 mb-3 border-l-8 bg-blue-50 border-black drop-shadow-lg transition ease-in-out hover:-translate-y-1 hover:scale-110 hover:bg-emerald-600 active:bg-emerald-800 cursor-pointer">
                                <input type="radio" name="question{{ loop.index }}_answer"
                                       value="{{ question.answer2 }}" class="hidden">
                                <span class="py-2 px-4">
                                    {{ question.answer2 }}
                                </span>
                            </label>
                        </li>
                        {% if question.answer3 %}
                            <li class="flex justify-center">
                                <label class="flex justify-center w-1/2 mb-3 border-l-8 bg-blue-50 border-black drop-shadow-lg transition ease-in-out hover:-translate-y-1 hover:scale-110 hover:bg-emerald-600 active:bg-emerald-800 cursor-pointer">
                                    <input type="radio" name="question{{ loop.index }}_answer"
                                           value="{{ question.answer3 }}" class="hidden">
                                    <span class="py-2 px-4">
                                        {{ question.answer3 }}
                                    </span>
                                </label>
                            </li>
                        {% endif %}
                        {% if question.answer4 %}
                            <li class="flex justify-center">
                                <label class="flex justify-center w-1/2 mb-3 border-l-8 bg-blue-50 border-black drop-shadow-lg transition ease-in-out hover:-translate-y-1 hover:scale-110 hover:bg-emerald-600 active:bg-emerald-800 cursor-pointer">
                                    <input type="radio" name="question{{ loop.index }}_answer"
                                           value="{{ question.answer4 }}" class="hidden">
                                    <span class="py-2 px-4">
                                        {{ question.answer4 }}
                                    </span>
                                </label>
                            </li>
                        {% endif %}
                        {% if question.answer5 %}
                            <li class="flex justify-center">
                                <label class="flex justify-center w-1/2 mb-3 border-l-8 bg-blue-50 border-black drop-shadow-lg transition ease-in-out hover:-translate-y-1 hover:scale-110 hover:bg-emerald-600 active:bg-emerald-800 cursor-pointer">
                                    <input type="radio" name="question{{ loop.index }}_answer"
                                           value="{{ question.answer5 }}" class="hidden">
                                    <span class="py-2 px-4">
                                        {{ question.answer5 }}
                                    </span>
                                </label>
                            </li>
                        {% endif %}
                    </ul>
                    {% if errors.answers %}
                        <span class="text-red-500">{{ errors.answers[0] }}</span>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
        <div class="bg-gray-300 h-8 mt-4 mb-4">
            <div id="progress-bar" class="bg-green-600 h-8"></div>
        </div>
        <input type="submit" value="Submit" class="hidden">
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const questions = document.querySelectorAll('.question');
        const progressBar = document.getElementById('progress-bar');
        let currentQuestionIndex = 0;

        function showNextQuestion() {
            if (currentQuestionIndex < questions.length - 1) {
                questions[currentQuestionIndex].style.display = 'none';
                currentQuestionIndex++;
                questions[currentQuestionIndex].style.display = 'block';
                updateProgressBar();
            } else {
                document.getElementById('quiz-form').submit(); // Formas postošana
            }
        }

        // Sākuma state, lai rādītu pirmo jautājumu
        questions[currentQuestionIndex].style.display = 'block';

        // Event listeners, lai pārslēgtos uz nākošo jautājumu, pēc atbildēta jautājuma
        const answerOptions = document.querySelectorAll('input[type="radio"]');
        answerOptions.forEach(option => {
            option.addEventListener('change', showNextQuestion);
        });

        // Funkcija, lai updatoitu progress bar
        function updateProgressBar() {
            const percentComplete = ((currentQuestionIndex + 1) / questions.length) * 100;
            progressBar.style.width = percentComplete + '%';
        }
    });
</script>
</body>
</html>
