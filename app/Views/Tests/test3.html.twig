<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Vendon</title>
</head>
<body class="bg-gray-200 w-screen h-screen">
<section class="relative mx-auto w-fit">
    <!-- navbar -->
    <nav class="flex justify-between bg-cyan-800 text-white w-screen">
        <div class="px-5 xl:px-12 py-6 flex w-full items-center">
            <a class="text-3xl font-bold font-heading" href="/">
                <!-- <img class="h-9" src="logo.png" alt="logo"> -->
                <img src="https://vendon.net/wp-content/uploads/2021/06/Logo_Header-1.svg" width="200" height="46"
                     class="attachment-full size-full wp-image-2389 astra-logo-svg" loading="lazy" alt="Vendon">
            </a>
        </div>
    </nav>
</section>
<div class="flex justify-center items-center w-full mt-10">
    <h1 class="font-bold text-4xl p-4 mb-8">Āķīgie jautājumi</h1>
</div>
<div id="quiz-container" class="flex justify-center">
    <form id="quiz-form" action="/test3" method="POST">
        {% for questionWithAnswers in answers %}
            <div class="flex justify-center" id="question-{{ loop.index }}">
                <div class="flex justify-center border-2 rounded-xl p-8 border-gray-300 bg-gray-100 w-1/2">
                    <p class="flex justify-center text-2xl">{{ questionWithAnswers.question.question }}</p>
                </div>
            </div>
            <!-- Display answer options -->
            <div class="flex justify-center p-4">
                <ul>
                    {% for answer in questionWithAnswers.answers %}
                        <li>
                            <label class="inline-flex items-center">
                                <input type="radio" name="question{{ loop.parent.loop.index }}" value="{{ answer.answer1 }}" class="hidden">
                                <span class="bg-gray-200 hover:bg-gray-300 py-2 px-4 rounded-lg cursor-pointer">
                                    {{ answer.answer1 }}
                                </span>
                            </label>
                            <label>
                                <input type="radio" name="question{{ loop.parent.loop.index }}"
                                       value="{{ answer.answer2 }}">
                                {{ answer.answer2 }}
                            </label>
                            {% if answer.answer3 %}
                                <label>
                                    <input type="radio" name="question{{ loop.parent.loop.index }}"
                                           value="{{ answer.answer3 }}">
                                    {{ answer.answer3 }}
                                </label>
                            {% endif %}
                            {% if answer.answer4 %}
                                <label>
                                    <input type="radio" name="question{{ loop.parent.loop.index }}"
                                           value="{{ answer.answer4 }}">
                                    {{ answer.answer4 }}
                                </label>
                            {% endif %}
                            {% if answer.answer5 %}
                                <label>
                                    <input type="radio" name="question{{ loop.parent.loop.index }}"
                                           value="{{ answer.answer5 }}">
                                    {{ answer.answer5 }}
                                </label>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
        <input type="submit" value="Submit">
    </form>

    <div id="results" style="display: none;">
        <h1>Quiz Completed</h1>
        <p>Your score: <span id="score"></span> out of {{ questions|length }}</p>
    </div>
</div>

<script>
    $(document).ready(function () {
        var currentQuestion = 1;
        var totalQuestions = {{ questions|length }};
        var score = 0;

        // Show the first question
        $('#question-1').show();

        // Handle form submission
        $('#quiz-form').submit(function (e) {
            e.preventDefault();

            // Get the selected answer for the current question
            var selectedAnswer = $("input[name='question" + currentQuestion + "']:checked").val();

            // Check if the selected answer is correct (you'll need to implement this logic)
            if (selectedAnswer === {{ questions[currentQuestion - 1].correctAnswer }}) {
                score++;
            }

            // Hide the current question and show the next question (if available)
            $('#question-' + currentQuestion).hide();
            currentQuestion++;

            if (currentQuestion <= totalQuestions) {
                $('#question-' + currentQuestion).show();
            } else {
                // Quiz completed, display results
                $('#results').show();
                $('#score').text(score);
            }
        });
    });
</script>
</body>
</html>
